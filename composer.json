{
  "name": "delegator/spendipity",
  "type": "project",
  "description": "",
  "homepage": "https://www.delegator.com",
  "license": "proprietary",
  "config": {
    "preferred-install": "dist",
    "generate-salts": true
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "git@github.com:AydinHassan/magento-community.git"
    },
    {
      "type": "composer",
      "url": "http://packages.firegento.com"
    }
  ], 
  "require": {
    "php": ">=5.3",
    "aydin-hassan/magento-core-composer-installer": "~1.2",
    "magento/magento": "1.9.1.0",
    "magento-hackathon/magento-composer-installer": "3.0.2",
    "vlucas/phpdotenv": "~1.1"
  },
  "extra": {
    "magento-root-dir": "web/magento",
    "magento-core-deploy" : {
      "excludes": [ 
        "media",
        "var/log",
        "var/cache",
        ".htaccess"
      ]
    }
  },
  "autoload": {
    "psr-4": { "": "scripts" }
  },
  "scripts": {
    "post-install-cmd": [
      "scripts/run-modman.sh"
    ],
    "pre-install-cmd": [
      "mkdir -p web/magento"
    ]
  }
}
