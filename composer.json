{
  "name": "delegator/magerock",
  "type": "project",
  "license": "Apache-2.0",
  "description": "A modern Magento 1.x stack",
  "homepage": "https://www.delegator.com",
  "config": {
    "preferred-install": "dist"
  },
  "support": {
    "issues": "https://github.com/delegator/magerock/issues"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://packages.firegento.com"
    }
  ],
  "require": {
    "php": ">=5.4",
    "aydin-hassan/magento-core-composer-installer": "1.3.0",
    "firegento/magento": "1.9.2.2",
    "magento-hackathon/magento-composer-installer": "3.0.6",
    "vlucas/phpdotenv": "~2.1.0"
  },
  "extra": {
    "magento-root-dir": "web",
    "magento-core-deploy" : {
      "excludes": [
        "media",
        "var/log",
        "var/cache",
        ".htaccess"
      ]
    }
  },
  "autoload": {
    "psr-0": {
      "": [
        "web/app",
        "web/app/code/local",
        "web/app/code/community",
        "web/app/code/core",
        "web/lib"
      ]
    }
  },
  "scripts": {
    "pre-install-cmd": [
      "mkdir -p web"
    ]
  }
}
